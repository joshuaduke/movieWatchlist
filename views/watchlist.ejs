<%- include ('partials/header.ejs')  -%> 

<section id="watchlistPage">
    <header>
        <h1>User's Watchlist</h1>
        <div class="headerContent">
            <h2><%= data.length %> Movie(s)</h2>

        </div>
    </header>

    <main id="watchlistContent">

        <% data.forEach(element => { %>
            <div class="watchlistItem">

                <a href="/movie/<%= element.imdbID%>" class="group1">
                    <img  src="<%= element.moviePoster %>" onerror="this.src='/images/Image-Not-Available.png'" alt="">
                    
                    <div>
                        <h3><%= element.movieTitle %></h3>
                        <p><%= element.movieGenre %></p>
                        <p>
                            <i class="far fa-star"></i> <%= element.movieRating %>,
                            <span class="releasedDate"><%= element.movieReleaseYear %></span>
                        </p>
                    </div>
                </a>
    
                <div class="group2">
                    <form action="/movie/<%= element.imdbID%>" method="post">
                        <input type="hidden" name="currentMovie" value="<%= element.imdbID%>">
                        <button type="submit" class="removeWatchlist"> X</button>
                    </form>
                    <p><%= element.movieLength == '' ? element.movieLength = 'N/A' : element.movieLength %></p>

                </div>
            </div>
        <% }); %>

    </main>
</section>


<%- include ('partials/footer.ejs')  -%> 
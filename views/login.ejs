<%- include ('partials/header.ejs') %>

<main class="register">
    <section id="logInContainer">
        <h1>Log In</h1>
        <div class="credentialsContainer">
            <form action="/login" method="POST">
                <input type="text" name="username" id="" placeholder="Email" required>
                <input type="text" name="password" id="" placeholder="Password" required>
                <p class="or">or</p>
                <button><i class="fab fa-google fa-lg"></i>Continue with Google</button>
                <p>
                    Don't have an account?
                    <span><a href="/register">Register</a></span>
                </p>
                <button type="submit">Continue</button>
                <p><a class="forgottenPassword" href="">Forgot your password</a></p>
            </form>
        </div>
    </section>
    
</main>
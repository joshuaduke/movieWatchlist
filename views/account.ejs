<%- include ('partials/header.ejs')  -%> 

<main id="accountPage">

    <section class="container">
        <h1><%= data.fullName %></h1>
        <p><%= data.email %></p>
        <a href="">Edit Profile</a>
    </section>

    <section class="container">
        <p>Average Movie Rating 
            <br> 
            <span><%= data.avgRating %> %</span>
        </p>
        <div class="stats">
            <p>Movies watched: <%= data.amountWatched%></p>
            <!-- <p>See all stats >></p> -->
        </div>
    </section>

    <section class="container">
        <p><a href="/logout">Sign Out</a></p>
        
        <form action="/account" method="Post">
            <button class="deleteBtn">Delete Account Information</button>
        </form>
    </section>
    <p class="copyright">Created by Joshua Duke 2021</p>
</main>
